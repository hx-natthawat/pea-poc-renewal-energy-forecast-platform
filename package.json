{
  "name": "pea-re-forecast-platform",
  "version": "1.1.0",
  "private": true,
  "description": "PEA Renewable Energy Forecast Platform - Monorepo",
  "scripts": {
    "prepare": "husky",
    "lint:backend": "cd backend && ./venv/bin/ruff check . && ./venv/bin/pyrefly check",
    "lint:frontend": "cd frontend && pnpm run check",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "test:backend": "cd backend && ./venv/bin/pytest tests/ -v --tb=short",
    "test:frontend": "cd frontend && pnpm run test:run"
  },
  "devDependencies": {
    "husky": "^9.1.7"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

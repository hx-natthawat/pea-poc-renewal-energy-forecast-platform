# =========================
# Application Settings
# =========================
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=change-me-in-production-use-secure-random-key

# =========================
# Database (TimescaleDB)
# =========================
DB_HOST=timescaledb
DB_PORT=5432
DB_NAME=pea_forecast
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# =========================
# Redis
# =========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# =========================
# Kafka
# =========================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# =========================
# Backend API
# =========================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=4
BACKEND_RELOAD=true

# =========================
# Frontend
# =========================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# =========================
# Keycloak Authentication
# =========================
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=pea-forecast
KEYCLOAK_CLIENT_ID=pea-forecast-api
KEYCLOAK_CLIENT_SECRET=change-me

# =========================
# ML / MLflow
# =========================
MODEL_REGISTRY_PATH=/app/models
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=pea-forecast

# =========================
# Observability
# =========================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_PORT=16686

# =========================
# Logging
# =========================
LOG_LEVEL=INFO
LOG_FORMAT=json
